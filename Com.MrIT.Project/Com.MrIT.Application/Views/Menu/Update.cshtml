@model Com.MrIT.ViewModels.VmMenuCategory
@{ 
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout_Manage.cshtml";
}


    <div class="row">
        <div class="col-sm-12">
            <form asp-action="Update" method="post" asp-controller="Menu">
                <div class="row">
                    <div class="col-sm-4">
                        <input type="hidden" asp-for="ID" />
                        <input type="hidden" asp-for="Active" />
                        <input type="hidden" asp-for="SystemActive" />
                        <input type="hidden" asp-for="CreatedBy" />
                        <input type="hidden" asp-for="CreatedOn" />

                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-sm-4">
                        <input type="text" asp-for="Name" class="form-control" />
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>

