@model Com.MrIT.ViewModels.VmMenuCategory
@{
    ViewData["Title"] = "New Menu Category";
    Layout = "~/Views/Shared/_Layout_Manage.cshtml";
}

<div class="row">
    <div class="col-sm-8">
        <form asp-action="Create" method="post" asp-controller="Menu">
            <div class="row">
                <div class="col-sm-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-sm-4">
                    <input type="text" asp-for="Name" class="form-control" />

                </div>
                <button class="btn btn-success" type="button" id="btnNewEducation">New</button>
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
</div>
    